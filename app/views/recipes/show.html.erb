
<%= render "shared/page_title", title:@recipe.name%>


<div class="row">
  <div class="col-md-4 pull-right center">
    <%= gravatar_for @recipe.chef, size:200 %>
    
    <h5>Brought to you by: <%= @recipe.chef.chefname %></h5>
  </div>
  <div class="col-md-8">
      <h5><%= link_to "Edit This Recipe", edit_recipe_path(@recipe), class:"btn btn-success pull-right" %></h5>

    <h3><%= @recipe.summary %></h3>
    <image class="show_recipe">
      <%= image_tag(@recipe.picture.url, class:"gravatar") if @recipe.picture? %>
    </image>
    <div class="well">
      <h4>Steps:</h4>
      <%= simple_format(@recipe.description)%>
    </div>
  </div>
  
  <h5><%= link_to "Return to Recipes Listing", recipes_path, class:"btn btn-warning btn-small" %></h5>
  
</div>