<!DOCTYPE html>
<html>
<head>
  <title>My Kitchen</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="navbar navbar-fixed-top navbar-default">
    <div class="container">
      <%= link_to "my Recipes", root_path, class: "btn btn-lg btn-success", id:"logo"%>
      <div class="nav_item">
        <%= link_to "Link", "", class: "btn btn-default btn-warning" %>
      </div>
      <div class="nav_item">
        <%= link_to "link1", "", class: "btn btn-default btn-warning" %>
      </div>
      <% if logged_in? %>
            
      <div class="nav_item">
        <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default btn-warning" %>
      </div>
      
      <ul class="nav_item">
        <li class="dropdown">
          <%= link_to "#", class: "btn btn=defualt btn-danger dropdown-toggle", "data-toggle" => "dropdown" do%>
          
          <%= current_user.chefname %>
            <b class="caret"></b>
          <%end%>
          <ul class="dropdown-menu">
            <li><%= link_to "View Profile", chef_path(current_user) %></li>
            <li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Log out", logout_path%></li>

          </ul>
        </li>
      </ul>

      <%else%>
        <div class="nav_item">
          <%= link_to "Log In", login_path, class: "btn btn-default btn-warning" %>
        </div>
      <%end%>      



    </div>
  </header>
  <div class="container">
    <%= render 'layouts/messages' %>
    <%= yield %>
    <div class="footer">
      <p>&copy; Jlian</p>
    </div>
  </div>

</body>
</html>
